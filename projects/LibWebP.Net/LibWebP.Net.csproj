<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <PackageId>Omegaframe.WebPSharp</PackageId>
    <Authors>Jörn Roddelkopf</Authors>
    <Company>Omegaframe</Company>
    <Description>Native Wrapper around libwebp to allowe en- and decoding of WebP Images through System.Drawing Bitmaps</Description>
    <RepositoryType>github</RepositoryType>
    <PackageTags>webp image processing decoder encoder</PackageTags>
    <RepositoryUrl>https://github.com/omegaframe/webpsharp</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Drawing.Common" Version="5.0.2" />
  </ItemGroup>

</Project>
